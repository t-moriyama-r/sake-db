MONGO_URI=mongodb://root:root@mongo:27017
MAIN_DB_NAME=helloworld
FRONT_URI=https://localhost
BACK_URI=https://localhost/api
JWT_SECRET_KEY=your-jwt-secret-key-here

# AWS S3設定（画像保存用）
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_IMAGE_BUCKET_NAME=sake-image
AWS_REGION=ap-northeast-1

# AWS SES設定（メール送信用）
# パスワードリセット機能を使用する場合は、以下を設定してください
# 詳細な設定手順: ../document/aws-ses-setup.md
AWS_SES_FROM=your-verified-email@example.com
AWS_SES_ACCESS_KEY=your-ses-access-key-id
AWS_SES_ACCESS_SECRET=your-ses-secret-access-key

# Amazon Product Advertising API設定（アフィリエイト用）
AMAZON_REGION=us-west-2
AMAZON_ACCESS_KEY=your-amazon-pa-api-access-key
AMAZON_ACCESS_SECRET=your-amazon-pa-api-secret-key
AMAZON_PARTNER_TAG=your-partner-tag
AMAZON_PARTNER_TRACKING_ID=your-tracking-id

# Twitter API設定（SNS連携用）
TWITTER_CONSUMER_KEY=your-twitter-consumer-key
TWITTER_CONSUMER_SECRET=your-twitter-consumer-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret
TWITTER_OAUTH_CLIENT=your-twitter-oauth-client
TWITTER_OAUTH_SECRET=your-twitter-oauth-secret
TWITTER_CALLBACK=your-twitter-callback-url
