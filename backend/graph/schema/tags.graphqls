input TagInput{
  liquorId:ID!
  text:String!
}

type Tag{
  id:ID!
  text:String!
}

extend type Query{
  getTags(liquorId:ID!):[Tag!]! # 一覧などではDBアクセス自体が不要なため、コードの簡単化も兼ねて分けて取得することにした
  searchLiquorsByTag(tag:String!):[Liquor!]! # タグで日本酒を検索
}

extend type Mutation {
  postTag(input:TagInput!):Tag! @auth
  deleteTag(id:ID!):Boolean! @auth
}
